@model Site.Models.Gamers
@using Site.Helpers           
<div class="span16">
@{
    
    using (Html.BeginForm())
    {        
        <div id="tagpicker" class="s mytop span16">

                <span class="gamertext">Gamer 1</span>
                @Html.TextBoxFor(g => g.Tag1, new { maxlength = 15, size = 15, @class = "taginput" })

                <span class="gamertext">Gamer 2</span>
                @Html.TextBoxFor(g => g.Tag2, new { maxlength = 15, size = 15, @class = "taginput" })
            
            @Html.Button("Compare", new Dictionary<string, object>() { { "class", "btn" } })
        </div>
    }    
}
</div>
<br />

 <script type="text/javascript" >

     $(".taginput").focusout(function () {

         var $textBox = $(this);
         $.post("/Home/ValidateUser", { tag: $textBox.val() }, function (data) {
             if (data == 'False') {
                 $textBox.addClass("invalidtag");

             }
             else {
                 $textBox.removeClass("invalidtag");
             }
         })
     });

    
 </script>
